<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.dictionary_test2.LogInController">
    <children>
        <Pane prefHeight="500.0" prefWidth="750.0" stylesheets="@login_style.css">
         <ImageView fitHeight="1332.0" fitWidth="785.0" layoutY="-362.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../images/login_background.jpg" />
            </image>
         </ImageView>
            <TextField fx:id="username" layoutX="169.0" layoutY="143.0" onAction="#logIn" prefHeight="33.0" prefWidth="412.0" promptText="Username">
            <font>
               <Font size="18.0" />
            </font></TextField>
            <PasswordField fx:id="password" layoutX="169.0" layoutY="230.0" prefHeight="33.0" prefWidth="412.0" promptText="Password">
            <font>
               <Font size="18.0" />
            </font></PasswordField>
            <Button fx:id="loginButton" layoutX="169.0" layoutY="323.0" mnemonicParsing="false" onAction="#logIn" prefHeight="33.0" prefWidth="179.0" styleClass="loginButtonStyle" text="Войти" textFill="WHITE" />
         <Button fx:id="backButton" layoutX="402.0" layoutY="323.0" mnemonicParsing="false" onAction="#switchBack" prefHeight="33.0" prefWidth="179.0" styleClass="loginButtonStyle" text="Назад" textFill="WHITE" />
           <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
           </padding>
        </Pane>
    </children>
</StackPane>
